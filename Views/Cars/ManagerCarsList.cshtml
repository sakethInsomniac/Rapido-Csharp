@model IEnumerable<Cars.Models.Car>

@{
    ViewBag.Title = "ManagerCarsList";
}

<h2>ManagerCarsList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
