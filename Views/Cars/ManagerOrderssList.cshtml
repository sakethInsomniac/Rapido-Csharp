@model IEnumerable<Cars.Models.Rental>

@{
    ViewBag.Title = "ManagerOrderssList";
}

<h2>ManagerOrderssList</h2>

<p>
    @Html.ActionLink("Create New", "CreateOrder")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturningDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturningDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditOrder", new { id=item.RentalID }) |
            @Html.ActionLink("Details", "OrderDetails", new { id=item.RentalID }) |
            @Html.ActionLink("Delete", "DeleteOrder", new { id=item.RentalID })
        </td>
    </tr>
}

</table>
